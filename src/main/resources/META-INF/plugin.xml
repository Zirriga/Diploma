<idea-plugin>
    <id>org.example.test_test_gradle</id>
    <name>ZirrigaVoice</name>
    <vendor email="zirriga@mail.com" url="http://www.zirriga.com">ZIRRIGA</vendor>

    <!-- <description><[some description for test my plugin with gradle]></description> -->

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">

     </extensions>

     <actions>
         <action id="your.action.id" class="com.zirriga.myideademokotlin.HelloAction"
                 text="Some Label" description="Action description" icon="AllIcons.Actions.Colors">
             <add-to-group group-id="ToolbarRunGroup" anchor="first" />
         </action>

         <action id="your.action.idb" class="com.zirriga.testkotlin.ActionHandler"
                 text="ZirrigaVoice" description="Action description" icon="AllIcons.Actions.Lightning">
             <add-to-group group-id="ToolbarRunGroup" anchor="first" />
         </action>

         <group id="Zirriga.Properties" text="ZirrigaProperties" description="Properties">
             <add-to-group group-id="MainMenu" anchor="last" />
             <action class = "com.zirriga.testkotlin.ZirrigaProperties" id = "Zirriga.Actions.Properties" text = "Properties"/>
         </group>

     </actions>
 </idea-plugin>